module.exports.handleEvent = function({ api, event, client, __GLOBAL }) {
	var { threadID, messageID } = event;
	if (event.body.indexOf("Imran")==0 || event.body.indexOf("ইমরান")==0 || event.body.indexOf("MH Imran")==0 || event.body.indexOf("@MH Imran")==0) {
		var msg = {
				body: "যেকোনো প্রয়োজনে আমার বস এর সাথে যোগাযোগ করুন👇https://www.facebook.com/profile.php?id=61556202264295",
				attachment: fs.createReadStream(__dirname + `/cache/`)
			}
			api.sendMessage( msg, threadID, messageID);
    api.setMessageReaction("🥰", event.messageID, (err) => {}, true)
		}
	}
